generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  firstName    String
  lastName     String
  email        String        @unique
  password     String
  transactions Transaction[]
}

enum TransactionType {
  EARNING
  EXPENSE
  INVESTMENT
}

model Transaction {
  id            String          @id @default(uuid())
  type          TransactionType @default(EARNING)
  name          String
  amountInCents Int
  description   String
  date          DateTime        @default(now())
  userId        String
  user          User            @relation(fields: [userId], references: [id])
}
